{
  "name": "tascom-drg-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/heytorc/tascom-drg-api.git",
  "author": "Heytor Cavalcanti <heytor01@live.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./build",
    "start:prod": "node build/server.js"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/server.ts",
    "ext": "ts, js"
  },
  "devDependencies": {
    "@prisma/client": "^4.3.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "nodemon": "^2.0.19",
    "prisma": "^4.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "json-as-xlsx": "^2.4.2",
    "xlsx": "^0.18.5"
  }
}
